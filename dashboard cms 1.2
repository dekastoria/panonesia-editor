  el.querySelector('.btn')?.addEventListener('click',e=>{
    const t=e.currentTarget?.dataset?.action||'none'; if(t==='none') return;
    // hook: action handled by platform/runtime (url/pdf/youtube/switch-scene/trigger)
  });
}
init{{id.replace(/[^a-zA-Z0-9_]/g,'_')}}();
</script>
